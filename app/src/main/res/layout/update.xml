<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hdd" />


    <EditText
        android:id="@+id/Updatename"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:paddingStart="10sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="MissingClass,MissingConstraints" />

    <EditText
        android:id="@+id/UpdateConfirmRegisterPassword"
        android:layout_width="290dp"
        android:layout_height="57dp"

        android:textColorHint="@color/white"
        android:textColor="@color/white"


        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Designation"
        android:paddingStart="10sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextRegisterAddress"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/UpdatePageNextbutton"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:background="@drawable/updatebtncolor"
        android:text="Update"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        app:layout_constraintVertical_bias="0.26"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/UpdateSalary"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"

        android:ems="10"

        android:textColorHint="@color/white"
        android:textColor="@color/white"


        android:hint="Salary"
        android:inputType="number"
        android:paddingStart="10sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateConfirmRegisterPassword" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:hint="State"

        android:textColorHint="@color/white"
        android:textColor="@color/white"


        android:paddingStart="10sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateSalary" />

    <EditText
        android:id="@+id/textView33"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:hint="Country"
        android:paddingStart="10sp"
        android:textSize="25sp"

        android:textColorHint="@color/white"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/editTextTextRegisterAddress"
        android:layout_width="290dp"
        android:layout_height="57dp"

        android:textColorHint="@color/white"
        android:textColor="@color/white"


        android:layout_marginTop="10dp"

        android:ems="10"
        android:hint="Address"
        android:paddingStart="10sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Updatename"
        tools:ignore="MissingConstraints" />



</android.support.constraint.ConstraintLayout>